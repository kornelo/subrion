<?xml version="1.0" encoding="utf-8"?>
<plugin name="kcaptcha">
	<title>KCaptcha</title>
	<summary>Plugin adds the CAPTCHA to all pages where it is needed to prevents automatic bot form submission.</summary>
	<author>Intelliants LLC</author>
	<contributor>Intelliants LLC</contributor>
	<version>3.2.0</version>
	<date>2015-01-29</date>
	<category>captchas</category>
	<compatibility>3.2.6</compatibility>

	<config group="captcha" name="kcaptcha_divider" type="divider" description="KCAPTCHA configuration" private="1">KCAPTCHA</config>
	<config group="captcha" name="captcha_case_sensitive" type="radio" values="1,0" description="Case sensitive" private="1">1</config>
	<config group="captcha" name="captcha_num_chars" type="text" description="Number of characters" private="1">5</config>

	<phrases>
		<phrase key="click_to_redraw" category="frontend">Click here to redraw</phrase>
		<phrase key="captcha_annotation" category="frontend">Please input letters you see on the image.&lt;br /&gt;Click on image to redraw.</phrase>
	</phrases>
</plugin>